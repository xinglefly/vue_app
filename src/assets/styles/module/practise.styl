//card
.card
  width: 350px
  height: 220px
  background-color: red
  border: 2px solid black
  border-radius: 15px
  margin: 0px
  header 
    margin: -20px 0 0 0
    height: 50px
    background-image: linear-gradient(
    to bottom,
    rgba(0, 0, 0, 0.1),
    rgba(0, 0, 0, 0))
    border-radius: 15px 15px 0 0
    h2
      font-size: 20px
      height: 30px
      line-height: 30px
      text-align: left 
  article 
    margin: -20px 0 0 0
    height: 120px
    background-color: rgba(0, 0, 0, 0.25)
    img 
      float: right 
    p
      font-size: 10px
  footer 
    height: 50px
    background-image: linear-gradient(
    to bottom,
    rgba(0, 0, 0, 0.1),
    rgba(0, 0, 0, 0))
    border-radius: 0 0 15px 15px
    p 
      font-size: 15px
      height: 30px
      line-height: 30px
