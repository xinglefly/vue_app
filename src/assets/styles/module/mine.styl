@import '../vars/colors.styl'
@import '../vars/size.styl'

.mine
  background-color: #F3F3F3
  width: 100%
  height 100%
  .top
    width: 100%
    height: 170px
    margin-bottom: 20px
    background: linear-gradient(338.21deg, #3AAD68 0%, #3AB542 100%)
    img
      width: 120px
      height: 120px
      border-radius: 50%
      margin: 0 20px 37px 37px
    p
      flex-direction: column
      text-align: left 
      span:nth-of-type(1)
        font-size: $size40
        color: $color-white    
        margin: 5px
      span:nth-of-type(2)
        font-size: 28px
        color: $color-white    
        margin: 5px
  .operate
    padding-left: 40px     
    background-color: $color-white
    font-size: $size32
    .item
      display: flex
      justify-content: space-between      
      align-items: center
      height 100px
      margin: 0
      padding-right: 36px
      border-bottom: solid 1px #ECECEC
      background-color: $color-white 
      left: 30px
    .item:nth-of-type(2)
       border-bottom: solid 1px $color-white  
      
